{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "outDir": "./dist",
    "rootDir": ".",
    "noEmit": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },
  "exclude": ["**/node_modules/*", "dist"],
  "include": ["./src/**/*.ts"]
}
